environment {
    TERMINAL "alacritty"
    BROWSER "firefox"

    ELECTRON_OZONE_PLATFORM_HINT "auto"
}


//  ██╗███╗   ██╗██████╗ ██╗   ██╗████████╗
//  ██║████╗  ██║██╔══██╗██║   ██║╚══██╔══╝
