//   ╚═════╝  ╚═════╝    ╚═╝   ╚═╝      ╚═════╝    ╚═╝   
output "eDP-1" {
    scale 1.0
    mode "1920x1080@120"
}

output "HDMI-A-1" {
    scale 1.0
    mode "1920x1080@120"
}


